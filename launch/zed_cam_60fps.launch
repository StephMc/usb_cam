<launch>
  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video0" />
    <param name="image_width" value="2560" />
    <param name="image_height" value="720" />
    <param name="pixel_format" value="yuyv" />
    <param name="camera_frame_id" value="usb_cam" />
    <param name="io_method" value="mmap"/>
    <param name="framerate" value="60"/>
    <param name="left_camera_info_url" value="package://usb_cam/params/left_camera_calibration_hd.yaml"/>
    <param name="right_camera_info_url" value="package://usb_cam/params/right_camera_calibration_hd.yaml"/>
  </node>
</launch>
